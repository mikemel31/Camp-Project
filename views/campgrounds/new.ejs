<% layout('partials/boilerplate') %>
<form class="row form-floating g-3 my-3 needs-validation" action="/campgrounds" method="post" novalidate>
    <div class="col-md-6 form-floating">
        <input type="text" class="form-control" id="name" name="campground[title]" required>
        <label for="name">Campground title</label>
    </div>
    <div class="col-md-6 form-floating">
        <input type="text" class="form-control" id="price" name="campground[price]" required>
        <label for="price">Price</label>
    </div>
    <div class="col-12 form-floating">
        <input type="text" class="form-control" id="address" name="campground[address]">
        <label for="inputAddress">Address</label>
    </div>
    <div class="col-md-6 form-floating">
        <input type="text" class="form-control" id="city" name="campground[city]" required>
        <label for="city">City</label>
    </div>
    <div class="col-md-4 form-floating">
        <select id="state" class="form-select" id="state" name="campground[state]" required>
            <option disabled selected value> -- Select State -- </option>
            <% for (zip of zips) { %> 
                <option value="<%= zip.code %> "><%= zip.name %> </option>
                <% } %> 
        </select>
        <label for="state">State</label>
    </div>
    <div class="col-md-2 form-floating">
        <input type="text" class="form-control" id="zip" name="campground[zip]" required>
        <label for="zip">Zip</label>
    </div>
    <div class="col-12 form-floating">
        <textarea class="col-12 form-control"  id="description" name="campground[description]"></textarea>
        <label for="description">Description</label>
    </div>
    <input type="text" value="/img.png" hidden readonly name="campground[image]">
    <div class="col-md-6 form-floating">
        <input type="tel" class="form-control" id="tel" name="campground[tel]">
        <label for="tel">Telephone</label>
    </div>
    <div class="col-md-6 form-floating">
        <input type="email" class="form-control" id="email" name="campground[email]">
        <label for="email">Email</label>
    </div>
    <div class="col-md-12 form-floating">
      <input type="text" class="form-control" id="website" name="campground[website]">
      <label for="website">Website</label>
    </div>
    <div class="col-12" style="width: -webkit-fill-available;">
      <button type="submit" class="btn btn-primary">Create new campground</button>
    </div>
  </form>