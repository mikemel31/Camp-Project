<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" 
      type="image/png" 
      href="/favicon.png">
    <script>
      const camp = <%- JSON.stringify(campground) %>;
      const title = '';
      if (window.location.pathname.includes('login')) {document.title = 'Login'} else if (window.location.pathname.includes('register')) {document.title = 'Register'} else if (window.location.pathname.includes('campgrounds/new')) {document.title = 'New Campground'} else if (window.location.pathname.includes('campgrounds/')) {document.title = camp.title} else if (window.location.pathname.includes('campgrounds')) {document.title = 'Campgrounds'} else {document.title = 'Error'}
    </script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stars.css" />
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css"
      rel="stylesheet"
    />
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Koulen&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/app.css">
  </head>
  <body class="d-flex flex-column vh-100">
    <%- include('./navbar') %> 
    <%- include('./flash') %>
    <main class="container"><%- body %></main>
    <%- include('./footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
  </body>
</html>
